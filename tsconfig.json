{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "outDir": "./dist",
    "baseUrl": "./src",
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "paths": {
      "*": ["./*"]
    }
  },
  "include": ["src", "global.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.{ts,tsx}"]
}
